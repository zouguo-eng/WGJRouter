<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF">

    <RelativeLayout
        android:id="@+id/item_rec_autobackup_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <FrameLayout
            android:id="@+id/item_rec_autobackup_fl"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/item_rec_autobackup_iv_pic"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@mipmap/isdir"/>
            <ImageView
                android:id="@+id/item_rec_autobackup_iv_pic_itempic"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="right|bottom"
                android:scaleType="centerInside" />
        </FrameLayout>
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/item_rec_autobackup_fl"
            android:id="@+id/item_rec_autobackup_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/item_rec_autobackup_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="名称"/>
            <TextView
                android:id="@+id/item_rec_autobackup_tv_counts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="数量"/>
        </LinearLayout>
        <android.support.v7.widget.SwitchCompat
            android:layout_alignParentRight="true"
            android:id="@+id/item_rec_autobackup_sc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</RelativeLayout>