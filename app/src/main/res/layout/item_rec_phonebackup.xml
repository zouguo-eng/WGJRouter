<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/item_rec_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <ImageView
            android:layout_alignParentLeft="true"
            android:id="@+id/item_rec_backup_iv_typepic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/copy_icon_pic"/>
        <TextView
            android:layout_toRightOf="@id/item_rec_backup_iv_typepic"
            android:layout_marginLeft="10dp"
            android:id="@+id/item_rec_backup_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="名称"
            android:textColor="#000000"/>
        <TextView
            android:layout_toLeftOf="@id/item_rec_backup_iv_godetail"
            android:id="@+id/item_rec_backup_tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开启状态"/>
        <ImageView
            android:layout_alignParentRight="true"
            android:id="@+id/item_rec_backup_iv_godetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/gotodetail"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#DBDBDB"
        android:layout_marginLeft="15dp"
        android:layout_below="@id/item_rec_rl"/>
</RelativeLayout>